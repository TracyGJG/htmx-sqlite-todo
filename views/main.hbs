<main x-data>
  <h1>HTMX and SQLite demo</h1>

  <form
    id='fmNewToDo'
    hx-post='/todos'
    hx-target='#todos-list'
    hx-swap='beforeend'
    hx-indicator='.htmx-indicator'
    hx-on::after-request='event.target.reset()'
  >
    <input
      type='text'
      name='newToDo'
      placeholder='Title of new To Do'
      required
      autocomplete='off'
    />
    <button type='submit' name='addButton'>Add To Do</button>
  </form>

  <hr />

  <ul
    id='todos-list'
    hx-get='/todos'
    hx-trigger='load'
    hx-indicator='.htmx-indicator'
  ></ul>
  <h3>
    <span class='htmx-indicator'>
      <img src='/bars.svg' alt='Indicator bars' />
      Loading...
    </span>
  </h3>
  <hr />
  <h2>Supported by NodeJs, Express, Handlebars and Body Parser.</h2>

</main>